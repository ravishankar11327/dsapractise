//sum of n natural number using recursion
//using factorial method
#include <iostream>
using namespace std;
int sum(int n){
    if(n==0){
        return 0;
      
    }
    return n+sum(n-1);

}
int main(){
    int n=4;
    cout <<sum(n)<<endl;
    sum(n);
  return 0;
}


//using paramterized 
#include<bits/stdc++.h>
using namespace std;

void func(int i, int sum){
   
   // Base Condition.
   if(i<1)
   {
       cout<<sum<<endl;
       return;
   }

   // Function call to increment sum by i till i decrements to 1.
   func(i-1,sum+i);

}

int main(){
  
  // Here, letâ€™s take the value of n to be 3.
  int n = 3;
  func(n,0);
  return 0;

}
